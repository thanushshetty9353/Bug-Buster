{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",  // Ensure this points to your app.py
            "console": "integratedTerminal",
            "env": {
                "FLASK_ENV": "development"  // This will enable debug mode in Flask
            },
            "justMyCode": true  // Set this to true to debug only your code
        }
    ]
 }
 